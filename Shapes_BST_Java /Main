package app;
import java.nio.file.Files;
import java.nio.file.Paths;
import parsing.ShapeParser;
import shapes.Shape;
import tree.BST;
import util.Comparators;
import java.nio.file.Path;
import java.io.BufferedReader;
import java.io.IOException;

public class Main {
    public static void main(String[] args) {
    
       if (args.length != 1){
        System.out.println("Usage: java app.Main <path-to-input-file>");
    System.exit(1);
}

    String path;
    path = args[0];
    Path p = Paths.get(path);

    try(BufferedReader br = Files.newBufferedReader(p)){
        ShapeParser parser = new ShapeParser();
        BST bst = new BST(Comparators.byAreaThenId());
        int nextId = 1;
        int errors = 0;
        int counter = 0;
        String line;

        while ((line = br.readLine()) != null) {
            counter++; 
            String trim = line.trim();
            
            if(trim.isEmpty() || trim.startsWith("#")){
                continue;
            }
            else {
                System.out.println(counter + ": " + line);
            }
            ShapeParser.Result r = parser.parseLine(line, counter, nextId);
            if (r.parsedShape != null) {
                bst.insert(r.parsedShape);
                nextId++;


            }
            else { errors++; System.out.println(r.errorMessage);
            }
        }
        var list = bst.toList();
        for (Shape s : list) {
            System.out.printf("%d %s %.2f%n", s.getId(), s.name(), s.area());
        } 



    } 
    catch(IOException e){
        System.out.println(e);
        System.exit(1);
    }




    }
}
